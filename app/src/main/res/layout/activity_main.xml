<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#E3F2FD">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Management System"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="#1976D2" />


    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Student Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/etMark1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Mark 1"
        android:inputType="number" />

    <EditText
        android:id="@+id/etMark2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Mark 2"
        android:inputType="number" />

    <EditText
        android:id="@+id/etMark3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Mark 3"
        android:inputType="number" />

    <EditText
        android:id="@+id/etMark4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Mark 4"
        android:inputType="number" />

    <!-- CRUD Buttons -->
    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Student" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Student" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Student" />

    <Button
        android:id="@+id/btnView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Students" />

    <!-- ScrollView for displaying results -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"> <!-- Weight for flexible layout -->

        <TextView
            android:id="@+id/tvResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Results"
            android:padding="16dp"
            android:textSize="18sp"
            android:textColor="#000000" />
    </ScrollView>
</LinearLayout>
